package Logica;

public class MenorMaiorSalario {
	public static void main(String[] args) {
		double salarios[] = new double[4];
		salarios[1] = 3200;
		salarios[2] = 6000;
		salarios[3] = 5000;
		salarios[4] = 2200;
		
		int menorSalario = 0;
		int maiorSalario = 0;
		
		for(int atual = 0; atual <= 3; atual++) {
			if(salarios[atual] < salarios[menorSalario] || salarios[atual] > salarios[maiorSalario]) {
				menorSalario = atual;
				maiorSalario = atual;
			}
			System.out.println("O salario mais barato " + salarios[menorSalario]);

		}
	}

}
